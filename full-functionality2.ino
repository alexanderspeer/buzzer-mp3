// =======================================================
// Internal state
// =======================================================

enum SongId : uint8_t { SONG_NONE = 0, SONG_1 = 1, SONG_2 = 2, SONG_3 = 3 };

static SongId currentSong = SONG_NONE;
static bool isPlaying = false;

// When true, the currently playing song should stop ASAP.
static volatile bool stopRequested = false;

// Switch support: when switching, we stop current, then immediately start this song next.
static bool switchPending = false;
static SongId nextSong = SONG_NONE;

// Debounce state for each button
static bool stable1 = false, stable2 = false, stable3 = false; // debounced pressed
static bool raw1 = false, raw2 = false, raw3 = false;          // last raw pressed
static uint32_t lastChange1 = 0, lastChange2 = 0, lastChange3 = 0;

// OLED rotation state
static uint8_t currentImage = 0;
static uint32_t lastSwapMs = 0;

// OLED message overlay state
static bool msgActive = false;
static uint32_t msgUntilMs = 0;
static const __FlashStringHelper *msgLine1 = nullptr;
static const char *msgLine2 = nullptr;

// After you paste the two bitmaps, these will point at them.
static const unsigned char* const images[] PROGMEM = {
  epd_bitmap_Gemini_Generated_Image_efatmoefatmoefat,
  epd_bitmap_Gemini_Generated_Image_9wyb469wyb469wyb
};
static const uint8_t IMAGE_COUNT = sizeof(images) / sizeof(images[0]);

// Song title lookup (for OLED)
static const char* songTitle(SongId s) {
  switch (s) {
    case SONG_1: return "Space Oddity";
    case SONG_2: return "Mandy";
    case SONG_3: return "The Gambler";
    default:     return "";
  }
}

// ---------------------- Helpers ----------------------

static uint16_t scaleMs(uint16_t ms) {
  return (uint32_t)ms * (uint32_t)SPEED_PCT / 100UL;
}

// Debounced press edge: returns true once on not pressed -> pressed
static bool pressedEdge(uint8_t pin, bool &stablePressed, bool &lastRawPressed, uint32_t &lastChangeMs) {
  bool rawPressedNow = (digitalRead(pin) == LOW); // INPUT_PULLUP: LOW means pressed

  if (rawPressedNow != lastRawPressed) {
    lastRawPressed = rawPressedNow;
    lastChangeMs = millis();
  }

  if ((millis() - lastChangeMs) > DEBOUNCE_MS) {
    if (stablePressed != rawPressedNow) {
      stablePressed = rawPressedNow;
      if (stablePressed) return true;
    }
  }
  return false;
}

static void requestStop() {
  stopRequested = true;
  noTone(BUZZ_PIN);
}

// ---------------------- OLED drawing ----------------------

static void drawBitmapByIndex(uint8_t idx) {
  display.clearDisplay();
  const unsigned char* img = (const unsigned char*)pgm_read_ptr(&images[idx]);
  display.drawBitmap(0, 0, img, 128, 64, SSD1306_WHITE);
  display.display();
}

static void showMessage(const __FlashStringHelper *line1, const char *line2) {
  msgActive = true;
  msgUntilMs = millis() + MSG_SHOW_MS;
  msgLine1 = line1;
  msgLine2 = line2;

  display.clearDisplay();
  display.setTextColor(SSD1306_WHITE);

  display.setTextSize(1);
  display.setCursor(0, 18);
  display.print(msgLine1);

  display.setTextSize(1);
  display.setCursor(0, 34);
  display.print(msgLine2);

  display.display();
}

static void oledTick() {
  uint32_t now = millis();

  // If message overlay is active, keep it until it expires
  if (msgActive) {
    if ((int32_t)(now - msgUntilMs) >= 0) {
      msgActive = false;
      lastSwapMs = now;
      drawBitmapByIndex(currentImage);
    }
    return;
  }

  // Base state: swap images every SWAP_MS (always, even while song plays)
  if (now - lastSwapMs >= SWAP_MS) {
    lastSwapMs = now;
    currentImage = (currentImage + 1) % IMAGE_COUNT;
    drawBitmapByIndex(currentImage);
  }
}

// ---------------------- Button -> Song control ----------------------

static void startSong(SongId s) {
  currentSong = s;
  isPlaying = true;
  stopRequested = false;
  switchPending = false;
  nextSong = SONG_NONE;

  showMessage(F("Now playing"), songTitle(s));
}

static void stopSong(SongId s) {
  // s is the song being stopped (for correct OLED message)
  requestStop();
  switchPending = false;
  nextSong = SONG_NONE;

  showMessage(F("Stopped playing"), songTitle(s));
}

static void switchSong(SongId from, SongId to) {
  // Stop current ASAP, then start next immediately after the playback loop exits
  requestStop();
  switchPending = true;
  nextSong = to;

  showMessage(F("Now playing"), songTitle(to));
}

static void handleSongButton(SongId requested) {
  if (!isPlaying) {
    startSong(requested);
    return;
  }

  // If currently playing the same song: stop it
  if (currentSong == requested) {
    stopSong(currentSong);
    return;
  }

  // Otherwise: switch from current to requested
  switchSong(currentSong, requested);
}

// Poll buttons frequently so stop/switch works during playback delays
static void pollButtonsDuringPlayback() {
  if (pressedEdge(BTN1_PIN, stable1, raw1, lastChange1)) handleSongButton(SONG_1);
  if (pressedEdge(BTN2_PIN, stable2, raw2, lastChange2)) handleSongButton(SONG_2);
  if (pressedEdge(BTN3_PIN, stable3, raw3, lastChange3)) handleSongButton(SONG_3);
}

// Delay that remains responsive to buttons and OLED
static void responsiveDelay(uint16_t ms) {
  uint32_t start = millis();
  while (!stopRequested && (millis() - start) < ms) {
    pollButtonsDuringPlayback();
    oledTick();
    delay(1);
  }
}

// ---------------------- Music playback ----------------------

static void playSongBlocking(
  const uint16_t *freqArr,
  const uint16_t *durArr,
  const uint16_t *gateArr,
  uint16_t nEvents
) {
  for (uint16_t i = 0; i < nEvents; i++) {
    if (stopRequested) break;

    uint16_t freq = pgm_read_word(&freqArr[i]);
    uint16_t dur  = pgm_read_word(&durArr[i]);
    uint16_t gate = pgm_read_word(&gateArr[i]);

    dur  = scaleMs(dur);
    gate = scaleMs(gate);
    if (gate > dur) gate = dur;

    if (freq == 0) {
      noTone(BUZZ_PIN);
      if (dur) responsiveDelay(dur);
      continue;
    }

    if (gate > 0) {
      tone(BUZZ_PIN, freq);
      responsiveDelay(gate);
    }

    noTone(BUZZ_PIN);
    uint16_t offMs = dur - gate;
    if (offMs > 0) responsiveDelay(offMs);

    if (EXTRA_GAP_MS && !stopRequested) responsiveDelay(EXTRA_GAP_MS);
  }

  noTone(BUZZ_PIN);
}

// ---------------------- Setup / Loop ----------------------

void setup() {
  pinMode(BUZZ_PIN, OUTPUT);
  noTone(BUZZ_PIN);

  pinMode(BTN1_PIN, INPUT_PULLUP);
  pinMode(BTN2_PIN, INPUT_PULLUP);
  pinMode(BTN3_PIN, INPUT_PULLUP);

  Wire.begin();
  if (!display.begin(SSD1306_SWITCHCAPVCC, OLED_ADDR)) {
    while (true) {}
  }

  display.clearDisplay();
  display.display();

  lastSwapMs = millis();
  currentImage = 0;
  drawBitmapByIndex(currentImage);
}

void loop() {
  // Always keep OLED swapping (or showing message)
  oledTick();

  // If idle: wait for a press
  if (!isPlaying) {
    if (pressedEdge(BTN1_PIN, stable1, raw1, lastChange1)) handleSongButton(SONG_1);
    if (pressedEdge(BTN2_PIN, stable2, raw2, lastChange2)) handleSongButton(SONG_2);
    if (pressedEdge(BTN3_PIN, stable3, raw3, lastChange3)) handleSongButton(SONG_3);
    return;
  }

  // If playing: run the current song (it can be stopped/switched mid-way)
  switch (currentSong) {
    case SONG_1:
      playSongBlocking(SONG1_FREQ_HZ, SONG1_DUR_MS, SONG1_GATE_MS, N_EVENTS_SONG1);
      break;
    case SONG_2:
      playSongBlocking(SONG2_FREQ_HZ, SONG2_DUR_MS, SONG2_GATE_MS, N_EVENTS_SONG2);
      break;
    case SONG_3:
      playSongBlocking(SONG3_FREQ_HZ, SONG3_DUR_MS, SONG3_GATE_MS, N_EVENTS_SONG3);
      break;
    default:
      break;
  }

  // Song ended naturally or we got a stop request.
  // Clear stop request so next behavior is clean.
  stopRequested = false;

  // If a switch was requested during playback, start the next song immediately.
  if (switchPending && nextSong != SONG_NONE) {
    SongId toStart = nextSong;
    switchPending = false;
    nextSong = SONG_NONE;

    // Start without waiting for another button press
    currentSong = toStart;
    isPlaying = true;
    // OLED message for switch was already shown in handleSongButton()
    return;
  }

  // Otherwise, we are done playing.
  isPlaying = false;
  currentSong = SONG_NONE;
}
